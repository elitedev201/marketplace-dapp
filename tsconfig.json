{
  "bazelOpts": {
    "es5Mode": true,
    "devmodeTargetOverride": "es2017"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "dcl/*": ["*"]
    },
    "module": "esnext",
    "diagnostics": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "downlevelIteration": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "declaration": true,
    "preserveConstEnums": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "removeComments": false,
    "target": "es2017",
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["esnext", "es2017", "dom"]
  },
  "exclude": ["bazel-*", "node_modules", "**/node_modules/*"]
}
